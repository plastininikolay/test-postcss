.box-progress {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    width: max-content;
    margin: 20px auto;
    padding: 10px;
    border: 3px solid $red;
    progress {
        transform: scale(1.5);
        &:indeterminate {
            display: none;
        }
    }
    input {
        font-size: 24px;
    }
}