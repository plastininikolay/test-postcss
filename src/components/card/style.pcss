@import "../../styles/variablesMixinsFunctions/index.pcss";

$size: 400px;

.card {
    padding: 5px;
    border: 1px solid $red;
    background: #fff;
    width: $size;
    height: $size;

    &-title {
        font-size: 20px;
        font-weight: bold;
        color: $red;
    }
    &-descr {
        font-style: italic;
        &:not(.active, .visible) {
            color: $red;
        }
    }
    .img {
        width: 50px;
        height: 50px;
    }
}